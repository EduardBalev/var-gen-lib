{
  "name": "var-gen-lib",
  "version": "0.0.1",
  "description": "Variables generator",
  "main": "./src/main.ts",
  "scripts": {
    "prebuild": "rimraf dist && rimraf result",
    "start": "ts-node ./src/demo.ts",
    "start-demo:with-name": "ts-node ./src/demo.ts result/colors-withName.css",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EduardBalev/var-gen-lib.git"
  },
  "author": "eduardbalev@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EduardBalev/var-gen-lib/issues"
  },
  "homepage": "https://github.com/EduardBalev/var-gen-lib#readme",
  "dependencies": {
    "ts-mockito": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/supertest": "^2.0.11",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "auto-changelog": "^2.3.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "fs": "0.0.1-security",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "path": "^0.12.7",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "yargs": "^17.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
